<%- include("header")%>

    <div class="container day">
      <%= dayOfTheWeek %>
    </div>

  <div class="my-list">
    <ul class="list-group my-group">

      <% todoList.forEach(function(item){ %>
        <li class="list-group-item my-item">
          <input type="checkbox" name="" value="">
          <p><%= item %></p>
        </li>
      <% }); %>


    <form class="list-group-item my-item form-inline" action="/" method="post">
        <input class="form-control input-lg" type="text" name="newTodo" placeholder="New Todo" autocomplete="off">
        <button class="btn btn-md" type="submit" name="button">Add task</button>
    </form>
    </ul>
  </div>

<%- include("footer")%>
